<!doctype html>
<html lang="en">
  <head>
    <title>Calculator</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <!-- <link rel="icon" href="/images/favicon.ico?" type="image/x-icon">  # added to get favicon to load -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script type="text/javascript" src="jquery.js"></script>
  </head>
  <body>
  <header>
    <h1>Calculator</h1>
  </header>
  <section>

    <textarea id="txt-area" readonly></textarea>

    <table>
      <tr>
        <button class="buttons">7</button>
        <button class="buttons">8</button>
        <button class="buttons">9</button>
        <form method="post" action="submit_num_1">
          <input type="text" name="user_input">
          <input type="submit" value="/">
        </form>
      </tr>
      <tr>
        <button class="buttons">4</button>
        <button class="buttons">5</button>
        <button class="buttons">6</button>
        <form method="post" action="submit_num_1">
          <input type="text" name="user_input">
          <input type="submit" value="*">
        </form>
      </tr>
      <tr>
        <button class="buttons">1</button>
        <button class="buttons">2</button>
        <button class="buttons">3</button>
        <form method="post" action="submit_num_1">
          <input type="text" name="user_input">
          <input type="submit" value="-">
        </form>
      </tr>
      <tr>
        <button class="buttons">0</button>
        <form method="post" action="submit_num_1">
          <input type="text" name="user_input">
          <input type="submit" value="+">
        </form>
      </tr>
      <tr>
        <form method="post" action="calculate_result">
          <input type="text" name="num_2">
          <input type="submit" value="=">
        </form>
      </tr>
    </table>


  </section>
  </body>
</html>