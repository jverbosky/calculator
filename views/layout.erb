<!doctype html>
<html lang="en">
  <head>
    <title>Calculator</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <!-- <link rel="icon" href="/images/favicon.ico?" type="image/x-icon">  # added to get favicon to load -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script type="text/javascript" src="jquery.js"></script>
  </head>
  <body>
  <header>
    <h1>Calculator</h1>
  </header>
  <section>

    <div>
      <div class="row">

        <div class="row">
          <textarea style="resize:none" rows="4" cols="25" id="userInput" readonly></textarea>
        </div>

        <div class="row">
          <button id="btn1">show user_input</button>
        </div>

        <div class="row">
          <button class="clear">clear user_input</button>
        </div>

        <div class="row">
          <table>
            <tr>
              <td><button class="button">7</button></td>
              <td><button class="button">8</button></td>
              <td><button class="button">9</button></td>
              <td><form method="post" id="divide" action="get_num_2">
                <input type="text" name="user_input" hidden>
                <input type="submit" value="/">
              </form></td>
            </tr>
            <tr>
              <td><button class="button">4</button></td>
              <td><button class="button">5</button></td>
              <td><button class="button">6</button></td>
              <td><form method="post" action="get_num_2">
                <input type="text" name="user_input" hidden>
                <input type="submit" value="*"></td>
              </form>
            </tr>
            <tr>
              <td><button class="button">1</button></td>
              <td><button class="button">2</button></td>
              <td><button class="button">3</button></td>
              <td><form method="post" action="get_num_2">
                <input type="text" name="user_input" hidden>
                <input type="submit" value="-">
              </form></td>
            </tr>
            <tr>
              <td><button class="button">0</button></td>
              <td><button class="button">.</button></td>
              <td><form method="post" action="get_num_2">
                <input type="text" name="user_input" hidden>
                <input type="submit" value="+">
              </form></td>
            </tr>
            <tr>
              <td><form method="post" action="calculate_result">
                <input type="text" name="num_2" hidden>
                <input type="submit" value="=">
              </form></td>
            </tr>
          </table>
        </div>

      </div>
    </div>

  </section>
  </body>
</html>